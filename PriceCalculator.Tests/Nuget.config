<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Official NuGet Gallery -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Microsoft packages (if needed for preview versions) -->
    <add key="dotnet-core" value="https://dotnetfeed.blob.core.windows.net/dotnet-core/index.json" />
    
    <!-- Clear any inherited package sources to avoid conflicts -->
    <clear />
    <!-- Re-add the sources we want -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <packageRestore>
    <!-- Allow NuGet to download missing packages -->
    <add key="enabled" value="True" />
    <!-- Automatically check for missing packages during build in Visual Studio -->
    <add key="automatic" value="True" />
  </packageRestore>
  
  <bindingRedirects>
    <!-- Automatically generate binding redirects -->
    <add key="skip" value="False" />
  </bindingRedirects>
  
  <packageManagement>
    <!-- Default format for PackageReference -->
    <add key="format" value="1" />
    <!-- Disable package source mapping -->
    <add key="disabled" value="False" />
  </packageManagement>
  
  <config>
    <!-- Set the global packages folder (optional - uses default if not specified) -->
    <!-- <add key="globalPackagesFolder" value="packages" /> -->
    
    <!-- Dependency version resolution -->
    <add key="dependencyVersion" value="Lowest" />
    
    <!-- Repository path for packages.config projects (not used for PackageReference) -->
    <!-- <add key="repositoryPath" value="packages" /> -->
  </config>
</configuration>